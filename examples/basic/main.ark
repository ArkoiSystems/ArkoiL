import "console"

struct Weird {
    var hello: i32
}

struct Info {
    var test: i32
    var pointerTest: i32*
    var weird: Weird
}

fun main(): i32 {
    var test = createInfo().weird.hello
    println("test: \"%i\"", test)
    return test
}

fun createInfo(): Info = { 
    test: 10,
    pointerTest: &test, 
    weird: { 
        hello: 2 
    } 
}

