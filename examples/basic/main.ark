import "console"

struct Weird {
    var hello: i32 = 2
}

struct Info {
    var test: i32
    var pointerTest: i32*
    var weird: Weird
}

fun main(): i32 {
    const info = createInfo()
    # var test: Info
    # test = info !! Couldn't work !!
    println("Hello World %s you are the number %i", "Timo", 1)
    return 0
}

fun createInfo(): Info = { 
    test: 10,
    pointerTest: &test,
    weird: {
        hello: 32
    }
}

